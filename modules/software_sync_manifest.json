{
  "blender": {
    "label": "Blender",
    "install_scan": "%USERPROFILE%/Blender/stable",
    "version_pattern": "blender-(\\d+\\.\\d+)",
    "config_dir": "%APPDATA%/Blender Foundation/Blender/{version}",
    "profiles": [
      {
        "name": "config",
        "source": "{config_dir}/config",
        "mapped": "Blender/{version}/config",
        "patterns": ["*.blend", "*.json", "*.txt"]
      },
      {
        "name": "scripts",
        "source": "{config_dir}/scripts",
        "mapped": "Blender/{version}/scripts"
      }
    ]
  },
  "houdini": {
    "label": "Houdini",
    "install_scan": "C:/Program Files/Side Effects Software",
    "version_pattern": "Houdini (\\d+\\.\\d+)",
    "config_dir": "%USERPROFILE%/Documents/houdini{version}",
    "profiles": [
      {
        "name": "prefs",
        "source": "{config_dir}",
        "mapped": "Houdini/houdini{version}",
        "patterns": ["*.pref", "*.env"]
      },
      {
        "name": "desktop",
        "source": "{config_dir}/desktop",
        "mapped": "Houdini/desktop",
        "patterns": ["*.desk"]
      },
      {
        "name": "packages",
        "source": "{config_dir}/packages",
        "mapped": "Houdini/packages",
        "patterns": ["*.json"]
      }
    ]
  }
}
